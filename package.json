{
  "name": "ht-create-tsapp",
  "version": "1.2.0",
  "description": "A Typescript project builder CLI",
  "main": "./build/main.js",
  "type": "module",
  "bin": {
    "ht-create-tsapp": "./build/main.js"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && chmod +x build/main.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "start": "pnpm build && node build/main.js",
    "clean": "rimraf ./build"
  },
  "keywords": [],
  "author": "Harsh Thakur",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "execa": "^9.5.2",
    "inquirer": "^12.5.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.13.11",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.2"
  }
}
